//  #1Binary to Decimal conversion

#include<stdio.h>
#include<math.h>
int main(){
    int n;
    printf("Enter a binary number: ");
    scanf("%d", &n);
    int rem, sum=0, P=0;
    while(n != 0){
        rem = n % 10;
        sum = sum + rem * pow(2,P);
        P++;
        n = n / 10;
    }
    printf("%d", sum);
    return 0;
}
